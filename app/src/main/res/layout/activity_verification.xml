<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.verification.VerificationActivity">

    <ImageView
        android:id="@+id/iv_verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:contentDescription="@string/verif_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_verif" />

    <TextView
        android:id="@+id/tv_verif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/kode_verifikasi"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_verif" />

    <TextView
        android:id="@+id/tv_verif_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="6dp"
        android:text="@string/masukkan_kode_verifikasi_yang_sudah_kami_kirim_ke_emailmu"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verif_title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_verif_desc"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:background="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            app:boxBackgroundColor="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            app:boxBackgroundColor="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            app:boxBackgroundColor="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            app:boxBackgroundColor="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_otp_6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            app:boxBackgroundColor="@color/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="0dp"
                android:paddingEnd="12dp"
                android:paddingRight="0dp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_verif"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="@string/verifikasi"
        android:textAllCaps="false"
        android:textColor="@drawable/custom_button_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_title_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/mengirim_ulang_otp_dalam"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_verif" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/_00_00"
        android:textColor="#BA1A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_timer" />

    <Button
        android:id="@+id/btn_send_otp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0"
        android:minWidth="0dp"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/kirim_ulang_otp"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_verif" />


</androidx.constraintlayout.widget.ConstraintLayout>