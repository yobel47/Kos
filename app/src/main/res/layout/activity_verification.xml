<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.verification.VerificationActivity">

    <ImageView
        android:id="@+id/iv_verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:contentDescription="@string/verif_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_verif" />

    <TextView
        android:id="@+id/tv_verif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Kode Verifikasi"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_verif" />

    <TextView
        android:id="@+id/tv_verif_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="6dp"
        android:text="Masukkan kode verifikasi yang sudah kami kirim ke emailmu"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verif_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_verif_desc"
        tools:layout_editor_absoluteX="1dp">

        <EditText
            android:id="@+id/et_otp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="464dp" />
        <EditText
            android:id="@+id/et_otp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="464dp" />
        <EditText
            android:id="@+id/et_otp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="464dp" />
        <EditText
            android:id="@+id/et_otp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="464dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>