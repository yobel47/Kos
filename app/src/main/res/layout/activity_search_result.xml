<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.ui.searchResult.SearchResultActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:layout_weight="4.75"
        android:background="@drawable/filter_input"
        android:drawableStart="@drawable/search_icon"
        android:drawablePadding="11.4dp"
        android:hint="@string/cari_kos_sekarang"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/satu1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="#EDEDED"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:text="Tipe Kos"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/ic_gender"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/satu2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#EDEDED"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:text="Waktu Bayar Kos"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_access_time_filled_24"
                app:iconTint="@color/black"
                app:layout_constraintStart_toEndOf="@+id/satu1"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/satu3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#EDEDED"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_discount_24"
                app:iconTint="@color/black"
                app:layout_constraintStart_toEndOf="@+id/satu2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/satu4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#EDEDED"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:text="Fasilitas"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_house_24"
                app:iconTint="@color/black"
                app:layout_constraintStart_toEndOf="@+id/satu3"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/satu5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#EDEDED"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:text="Aturan Kos"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_article_24"
                app:iconTint="@color/black"
                app:layout_constraintStart_toEndOf="@+id/satu4"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="true"
        android:scrollbars="none"
        tools:listitem="@layout/card_search_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFBFE"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Filter"
            android:background="@drawable/filter_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Urutkan"
            android:background="@drawable/filter_background"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
